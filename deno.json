{
  "name": "@tickisinator/tickisinator",
  "version": "0.2.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env --allow-ffi",
    "test:watch": "deno test --allow-net --allow-read --allow-write --allow-env --allow-ffi --watch",
    "coverage": "deno test --allow-net --allow-read --allow-write --allow-env --allow-ffi --coverage=coverage",
    "build": "deno compile --allow-net --allow-read --allow-write --allow-env --allow-ffi --output=bin/tickisinator.bin src/main.ts",
    "install": "deno install --allow-net --allow-read --allow-write --allow-env --allow-ffi --name tickisinator src/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/cli": "jsr:@std/cli@^1",
    "@db/sqlite": "jsr:@db/sqlite@^0.11"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  }
}
